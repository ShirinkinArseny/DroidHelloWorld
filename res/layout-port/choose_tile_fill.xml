<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id = "@+id/choose_tile_fill_layout">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tile_example" android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" android:layout_weight="0.5" android:clickable="true"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fill_example" android:layout_gravity="center_horizontal" android:scaleType="fitXY"
            android:layout_weight="0.5" android:clickable="true"/>
</LinearLayout>